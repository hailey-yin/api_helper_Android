<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="mobi.wonders.apps.android.budrest.activity.ProjectActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:theme="@style/Toolbar_Theme"
            android:elevation="2dp"/>

        <LinearLayout
            android:id="@+id/layout_choose_api"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <carbon.widget.TextView
                style="@style/carbon_TextView"
                android:id="@+id/tog_api"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="第一章 用户模块"
                android:textColor="@color/grayer_dark_text_color"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textSize="14sp"
                android:clickable="true"
                android:layout_marginLeft="16dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="1.1 用户注册"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:textSize="14sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/layout_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                    <LinearLayout
                        style="@style/project_detail"
                        android:id="@+id/api_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/method"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/post"
                                android:textSize="@dimen/text_size_large"
                                android:textColor="@color/method_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/textview_space"
                                android:text="用户注册"
                                android:textSize="@dimen/text_size_xlarge"
                                android:textColor="@color/primary_dark"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:text="@string/brief_introduction"
                                android:textSize="@dimen/text_size_large"
                                android:textColor="@color/grayer_dark_text_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/textview_space"
                                android:text="用户注册"
                                android:textSize="@dimen/text_size_large"
                                android:textColor="@color/text_color"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/view_depend_parent"
                        android:layout_marginLeft="@dimen/view_depend_parent"
                        android:background="@color/divider" />
                    <LinearLayout
                        android:id="@+id/server_address"
                        style="@style/project_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/server_url"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_dark"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="http://192.168.1.1:3005/budrest"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/grayer_dark_text_color"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/view_depend_parent"
                        android:layout_marginLeft="@dimen/view_depend_parent"
                        android:background="@color/divider" />
                    <LinearLayout
                        android:id="@+id/params"
                        style="@style/project_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parameter"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_dark"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/parameter_name"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/grayer_dark_text_color"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/parameter_style"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/grayer_dark_text_color"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/parameter_is_must"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/grayer_dark_text_color"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text="@string/parameter_mean"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/grayer_dark_text_color"/>
                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/view_depend_parent"
                        android:layout_marginLeft="@dimen/view_depend_parent"
                        android:background="@color/divider"/>
                    <LinearLayout
                        android:id="@+id/output"
                        style="@style/project_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/output"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_dark"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:background="@drawable/bg_output"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/view_depend_parent"
                        android:layout_marginLeft="@dimen/view_depend_parent"
                        android:background="@color/divider"/>
                    <LinearLayout
                        android:id="@+id/example"
                        style="@style/project_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/example"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_dark"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/success"
                                android:layout_gravity="center"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/primary_dark" />
                            <View
                                android:layout_width="2dp"
                                android:layout_height="12dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@color/divider"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/failure"
                                android:layout_gravity="center"
                                android:textSize="@dimen/text_size_medium"
                                android:textColor="@color/grayer_dark_text_color" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:background="@drawable/bg_output"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="@dimen/view_depend_parent"
                        android:layout_marginLeft="@dimen/view_depend_parent"
                        android:background="@color/divider"/>
                    <LinearLayout
                        android:id="@+id/description"
                        style="@style/project_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/description"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_dark"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="100dp"
                            android:layout_marginTop="10dp"
                            android:padding="10dp"
                            android:background="@drawable/bg_output"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/debug"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="14dp"/>

</RelativeLayout>
