<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://sc  hemas.android.com/apk/res-auto">

    <carbon.widget.RelativeLayout
        style="@style/carbon_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:carbon_rippleColor="@color/primary">
        <ImageView
            android:id="@+id/star_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/star_collected1"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/star_image">

            <TextView
                android:id="@+id/project_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="15dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="5dp"
                android:textStyle="normal"
                android:textSize="20sp"
                android:text="BudRest-Android"/>
            <TextView
                android:id="@+id/project_author"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center_vertical|left"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="created by yhl"/>
        </LinearLayout>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/right_arrow"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </carbon.widget.RelativeLayout>

</LinearLayout> 
