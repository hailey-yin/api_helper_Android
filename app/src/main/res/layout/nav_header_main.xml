<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    app:insetForeground="#4000"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168.75dp"
        android:background="@drawable/side_nav_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/init_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textSize="45dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/left_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:text="udRest"
                android:textColor="@color/dark_grey"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="55dp"
            android:background="@color/carbon_black_26"
            android:clickable="true">

            <TextView
                android:id="@+id/account_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未登录"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:textColor="@color/carbon_white_70"/>
            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/placeholder_panel"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="vertical"
            android:background="@android:color/white">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/slide_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <carbon.widget.LinearLayout
                android:id="@+id/account_linearlayout"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/account" />
                <TextView
                    android:id="@+id/username_textview"
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="账号信息"/>
            </carbon.widget.LinearLayout>
            <carbon.widget.LinearLayout
                android:id="@+id/change_account"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/change_account" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="切换账号"/>
            </carbon.widget.LinearLayout>
            <carbon.widget.LinearLayout
                android:id="@+id/edit_account"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/edit" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="修改密码"/>
            </carbon.widget.LinearLayout>
            <carbon.widget.LinearLayout
                android:id="@+id/exit_account"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/exit_account" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="退出登录"/>
            </carbon.widget.LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/menu_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <carbon.widget.LinearLayout
                android:id="@+id/item_home"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/home" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="首 页"/>
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/item_test"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_bug_report" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="测 试"/>
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/item_attention"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/mine" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="我 的"/>
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/item_my"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/star_uncollected" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="关 注"/>
            </carbon.widget.LinearLayout>

            <carbon.widget.LinearLayout
                android:id="@+id/item_new"
                style="@style/carbon_LinearLayout"
                app:carbon_rippleColor="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/drawer_menu_height"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:clickable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/create" />
                <TextView
                    style="@style/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="新 增"/>
            </carbon.widget.LinearLayout>

        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/drawer_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_gray"/>

    <LinearLayout
        android:id="@+id/drawer_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <carbon.widget.LinearLayout
            android:id="@+id/item_setting"
            style="@style/carbon_LinearLayout"
            app:carbon_rippleColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_menu_height"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/setting" />
            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="设 置"/>
        </carbon.widget.LinearLayout>
        <carbon.widget.LinearLayout
            android:id="@+id/item_theme"
            style="@style/carbon_LinearLayout"
            app:carbon_rippleColor="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawer_menu_height"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:clickable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/viewmode_cloudy" />
            <TextView
                style="@style/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="模 式"/>
        </carbon.widget.LinearLayout>
    </LinearLayout>

</LinearLayout>
