<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>

        <item name="textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>

        <item name="popupMenuStyle">@style/myPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/myPopupMenuStyle</item>    </style>

    <style name="HomeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="WelcomeTheme" parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:titleTextStyle">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="Toolbar_Theme">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Toolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:titleTextStyle">@style/ToolBar_titleStyle</item>
    </style>

    <style name="ToolBar_titleStyle">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="HomeTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="button" parent="carbon_Button">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="slidingmenu" parent="carbon_LinearLayout">
        <item name="android:layout_marginTop">@dimen/slidingmenu_margetop</item>
        <item name="android:minHeight">@dimen/slidingmenu_itemheight</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Material_Card_View" parent="carbon_CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Material_Card_Title" parent="Material_Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Material_Headline">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Material_Card_Subtitle_16dp" parent="Material_Card_Subtitle_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Material_Card_Subtitle_24dp" parent="Material_Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Material_Subhead">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/search_bar_open</item>
        <item name="android:windowExitAnimation">@anim/search_bar_close</item>
    </style>

    <style name="Material_Card_Supporting_Text_16dp" parent="Material_Card_Supporting_Text_24dp">
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="Material_Card_Supporting_Text_24dp" parent="Material_Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:gravity">center_vertical|left</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Material_Body1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Material_Action" parent="@style/Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--登录界面-->
    <style name="login_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marge_top</item>
        <item name="android:layout_marginLeft">@dimen/marge_left</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="dialogWindowAnim" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>

    <style name="carbon_CardView" parent="carbon_LinearLayout">
        <item name="android:background">@color/white</item>
        <item name="carbon_elevation">4dp</item>
        <item name="carbon_cornerRadius">2dp</item>
    </style>

    <style name="carbon_LinearLayout">
        <item name="carbon_rippleColor">@null</item>
    </style>

    <style name="project_detail">
        <item name="android:layout_marginLeft">@dimen/content_margin</item>
        <item name="android:layout_marginRight">@dimen/content_margin</item>
        <item name="android:layout_marginTop">@dimen/content_margin</item>
        <item name="android:layout_marginBottom">@dimen/content_margin</item>
    </style>

    <style name="myPopupMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="myPopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="myPopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
